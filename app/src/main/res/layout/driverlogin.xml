<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgraound"
    tools:context=".DriverloginActivity">

    <TextView
        android:id="@+id/signind"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="103dp"
        android:gravity="center"
        android:text="Sign In"
        android:textColor="@color/cardview_dark_background"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/usernamed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7">

    </TextView>

    <EditText
        android:id="@+id/usernamed"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/signind"
        android:layout_marginBottom="16dp"
        android:background="@color/white"
        android:drawableStart="@drawable/baseline_person_24"
        android:hint=" Enter Your ID "
        android:padding="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/passd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signind" />

    <EditText
        android:id="@+id/passd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/usernamed"
        android:layout_marginBottom="63dp"
        android:autofillHints=""
        android:background="@color/white"
        android:drawableLeft="@drawable/baseline_password_24"
        android:hint=" Enter Your Password"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/god"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernamed" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/god"
        android:layout_width="124dp"
        android:layout_height="0dp"
        android:layout_below="@id/passd"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:backgroundTint="#5d8aa1"
        android:text="@string/login"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passd" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="212dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="47dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/signind"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo3" />


</androidx.constraintlayout.widget.ConstraintLayout>